<div class="container">
  <h1>Atlas</h1>
</div>

<div class="banner">
  <div class="container">
    <h2>Edit Country</h2>
  </div>
</div>

<div class="container">
  <%= form_for @country do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :population %>
    <%= f.number_field :population %>

    <%= f.label :flag %>
    <%= f.text_field :flag_url %>

    <%= f.label :continent_id %>
    <%= f.collection_select(:continent_id, Continent.all, :id, :name) %>

    <%= f.submit (@country.new_record? ? "Create" : "Update") %>

  <% end %>
</div>
